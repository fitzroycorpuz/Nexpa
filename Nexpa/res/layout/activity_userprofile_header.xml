<?xml version="1.0"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:paddingTop="16dp"
            tools:ignore="HardcodedText" >

            <View
                android:id="@+id/innerPic"
                android:layout_width="138dip"
                android:layout_height="138dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="5dip"
                android:background="@drawable/circle"
                android:orientation="vertical" />

            <ImageView
                android:id="@+id/img_profile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/innerPic"
                android:layout_alignLeft="@id/innerPic"
                android:layout_alignRight="@id/innerPic"
                android:layout_alignTop="@id/innerPic"
                android:padding="12dip"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="16dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                 />

            <TextView
                android:id="@+id/tv_job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="job title"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_uname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="username"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_url0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="url0"
                android:autoLink="web"
                android:linksClickable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_url1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="url1"
                 android:autoLink="web"
                android:linksClickable="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_url2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="url2"
                 android:autoLink="web"
                android:linksClickable="true"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                 />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_smoke" >
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingRight="16dp" >

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_settings" />

            <Button
                android:id="@+id/btn_edit_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_profile" >
            </Button>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white_smoke" >
    </TextView>

</LinearLayout>